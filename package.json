{
  "name": "electron-vue-hosts-editor",
  "version": "0.1.0",
  "description": "A modern hosts file editor built with Electron, Vue 3, and Vuetify",
  "main": "main.js",
  "author": {
    "name": "vdhoangson",
    "email": "vdhoangson@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vdhoangson/electron-vue-hosts-editor.git"
  },
  "homepage": "https://github.com/vdhoangson/electron-vue-hosts-editor",
  "bugs": {
    "url": "https://github.com/vdhoangson/electron-vue-hosts-editor/issues"
  },
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "cross-env ELECTRON_START_URL=http://localhost:5173 electron . --trace-warnings",
    "dev": "concurrently \"yarn dev:renderer\" \"yarn dev:electron\"",
    "build:renderer": "vite build",
    "start": "electron . --trace-warnings",
    "build": "yarn build:renderer && electron-builder",
    "builder": "electron-builder",
    "format": "prettier --write \"src/**/*.{js,vue,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,vue,json,css,scss,md}\"",
    "lint": "eslint src --ext .js,.vue",
    "lint:fix": "eslint src --ext .js,.vue --fix"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "flag-icons": "^7.5.0",
    "sudo-prompt": "^9.2.1",
    "vite-plugin-vuetify": "^2.1.2",
    "vue": "^3.3.0",
    "vue-i18n": "9",
    "vuetify": "^3.10.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "sass": "^1.92.1",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.vdhoangson.hostseditor",
    "productName": "HostsEditor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "hosts.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons"
    }
  }
}
